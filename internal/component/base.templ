package component

templ Base(alpinejsUrl, htmxUrl string) {
    <html>
        <head>
            <script defer src={alpinejsUrl}></script>
            <script src={htmxUrl}></script>
        </head>
        <body>
            <nav>
                <ul>
                    <li>
                        <button
                            hx-trigger="click"
                            hx-get="/home"
                            hx-target="#target"
                            hx-swap="innerHTML"
                            hx-replace-url="true"
                        > Home </button>
                    </li>
                    <li>
                        <button
                            hx-trigger="click"
                            hx-get="/projects"
                            hx-target="#target"
                            hx-swap="innerHTML"
                            hx-replace-url="true"
                        > Projects </button>
                    </li>
                    <li>
                        <button
                            hx-trigger="click"
                            hx-get="/articles"
                            hx-target="#target"
                            hx-swap="innerHTML"
                            hx-replace-url="true"
                        > Articles </button>
                    </li>
                </ul>
            </nav>

            <div id="target"> 
                {children...}
            </div>
        </body>
    </html>
}